FROM ubuntu:16.04

ENV DEBIAN_FRONTEND noninteractive

# store screenshot locally before uploading to aws s3
RUN mkdir -p /watchman/screenshot/test
RUN mkdir -p /watchman/screenshot/change

RUN apt-get update && apt-get install -y \
	python-pip \
	libmysqlclient-dev \
	wget \
	unzip \
	fonts-wqy-zenhei \
	vim

# Set the Chrome repo.
RUN wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub | apt-key add - \
    && echo "deb http://dl.google.com/linux/chrome/deb/ stable main" >> /etc/apt/sources.list.d/google.list

# Install Chrome.
RUN apt-get update && apt-get -y install google-chrome-stable

# Download Chrome Driver
RUN wget https://chromedriver.storage.googleapis.com/2.33/chromedriver_linux64.zip

RUN unzip chromedriver_linux64.zip
RUN rm chromedriver_linux64.zip

# Move driver to system PATH
RUN mv chromedriver /usr/local/bin/chromedriver

# upgrade the pip package to the latest version
RUN pip install --upgrade pip

RUN pip --no-cache-dir install selenium==3.5.0
RUN pip --no-cache-dir install boto3==1.5.6

# build with `docker build -t browser -f browserDockerfile .`

# run container with `docker run -p 9001:9001 watchman-api`